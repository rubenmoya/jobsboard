#jobs
  .job
    %h2= @job.title
    %p= @job.description
    %p= @job.company
    = link_to "Apply for job", @job.url, class: "btn btn-default"

  #links
    .btn-group
      = link_to "Back", root_path, class: "btn btn-sm btn-default"
      = link_to "Edit", edit_job_path, class: "btn btn-sm btn-default"
      = link_to "Delete", job_path, method: :delete, data: { confirm: "Are you sure?" }, class: "btn btn-sm btn-default"
